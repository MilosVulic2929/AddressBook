<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="808.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se201.projekat.controllers.StatisticsController">
   <children>
      <BarChart fx:id="barChart" layoutX="50.0" layoutY="134.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="232.0" prefWidth="500.0">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </BarChart>
      <RadioButton fx:id="radioBtnCountry" layoutX="180.0" layoutY="42.0" mnemonicParsing="false" onAction="#handleCountryRadio" text="Country" />
      <RadioButton fx:id="radioBtnContact" layoutX="357.0" layoutY="42.0" mnemonicParsing="false" onAction="#handleContactRadio" text="Groups" />
      <PieChart fx:id="pieChartGender" layoutX="102.0" layoutY="377.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="339.0" prefWidth="420.0" title="Statistics by gender" />
      <Button layoutX="123.0" layoutY="758.0" mnemonicParsing="false" onAction="#onHome" prefHeight="25.0" prefWidth="89.0" text="Home" />
      <Button layoutX="387.0" layoutY="758.0" mnemonicParsing="false" onAction="#onMoreStatistics" text="More Statistics" />
   </children>
</AnchorPane>
